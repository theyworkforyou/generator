<% if @new_repo_url %>
  <div class="alert alert-success">
    <b>Success! Your new repo is available at <a href="<%= @new_repo_url %>"><%= @new_repo_url %></a>.</a>
  </div>
<% end %>
<form method="post" action="<%= url('/sites') %>">
  <div class="form-group">
    <label for="site-name">Site name</label>
    <input type="text" name="site_name" class="form-control" id="site-name" placeholder="Site name">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
